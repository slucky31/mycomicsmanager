
<MudToolBar DisableGutters="true" Class="pt-6">
    <MudButtonGroup Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" Class="mx-1">
        <MudIconButton
            Link="/"
            Title="Home"
            Variant="Variant.Filled"
            Icon="@Icons.Material.Filled.Home"
            Color="Color.Primary">
        </MudIconButton>
    </MudButtonGroup>
    <MudButtonGroup Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" Class="mx-1">
        <MudIconButton
            Link="/comics/upload"
            Title="Upload comics"
            Variant="Variant.Filled"
            Icon="@Icons.Filled.DriveFolderUpload"
            Color="Color.Primary">
        </MudIconButton>
        <MudIconButton
            Link="/comics/import"
            Title="Import comics"
            Variant="Variant.Filled"
            Icon="@Icons.Filled.AddComment"
            Color="Color.Primary">
        </MudIconButton>
        <MudIconButton
            Link="/comics/table"
            Title="Affichage des comics sous forme de table"
            Variant="Variant.Filled"
            Icon="@Icons.Material.Filled.TableView"
            Color="Color.Primary">
        </MudIconButton>
        <MudIconButton
            Link="/comics/last-added"
            Title="Affichage des derniers comics ajoutés"
            Variant="Variant.Filled"
            Icon="@Icons.Material.Filled.MoreTime"
            Color="Color.Primary">
        </MudIconButton>
    </MudButtonGroup>
    <MudButtonGroup Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" Class="mx-1">
        <MudIconButton
            Link="libraries/create"
            Title="Créer une librairie"
            Variant="Variant.Filled"
            Icon="@Icons.Filled.LibraryAdd"
            Color="Color.Primary">
        </MudIconButton>
        <MudIconButton
            Link="libraries/list"
            Title="Afficher les librairies"
            Variant="Variant.Filled"
            Icon="@Icons.Filled.LibraryBooks"
            Color="Color.Primary">
        </MudIconButton>
    </MudButtonGroup>
    <MudButtonGroup Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" Class="mx-1">
        <MudIconButton
            Link="/book"
            Title="Ajouter une livre ou une BD lue"
            Variant="Variant.Filled"
            Icon="@Icons.Filled.MenuBook"
            Color="Color.Primary">
        </MudIconButton>
    </MudButtonGroup>
    <MudButtonGroup Color="Color.Primary" Size="Size.Large" Variant="Variant.Filled" Class="mx-1">
        <MudIconButton
            Link="/stats"
            Title="Statistiques"
            Variant="Variant.Filled"
            Icon="@Icons.Filled.QueryStats"
            Color="Color.Primary">
        </MudIconButton>
    </MudButtonGroup>
</MudToolBar>