<MudDialog>    
    <DialogContent>
        <MudText>@ConfirmationMessage</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="@ColorConfirmButton" OnClick="Confirm">@ActionText</MudButton>
    </DialogActions>
</MudDialog>
