@using Application.Libraries
@using Web.Validators

<MudDialog>    
    <DialogContent>
        <MudForm Model="@library" @ref="@form" Validation="@(libraryValidator.ValidateValue)" ValidationDelay="0">
            <MudTextField @bind-Value="library.Name" For="@(() => library.Name)" Immediate="true" />
            <MudTextField Value="library.RelativePath" For="@(() => library.RelativePath)" Disabled="true" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance ? MudDialog { get; set; }

    [Parameter]
    public LibraryUiDto library { get; set; } = new LibraryUiDto();

    public required MudForm form;

    private LibraryValidator libraryValidator = new LibraryValidator();

    private void Submit()
    {
        form.Validate();        
        if (form.IsValid)
        {
            Guard.Against.Null(MudDialog);
            MudDialog.Close(DialogResult.Ok(library));
        }        
    }

    private void Cancel()
    {
        Guard.Against.Null(MudDialog);
        MudDialog.Cancel();
    }
}
