@layout LoginLayout
@page "/"
@using System.Security.Cryptography
@inject NavigationManager Navigation

<style>
    .landing-background {
        min-height: 100vh;
        width: 100vw;
        background-size: cover;
        background-position: center;
        position: fixed;
        top: 0; left: 0;
        z-index: -1;
    }
    .centered-band {
        background: rgba(20,20,20,0.65);
        border-radius: 1.5rem;
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        min-width: 350px;
        max-width: 480px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 4px 32px 0 rgba(0,0,0,0.25);
    }
    .logo-row {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .logo-square img {
        width: 100px;
        height: 100px;
    }
    .app-title {
        font-size: 2.5rem;
        font-weight: 400;
        color: #fff;
        letter-spacing: 0.01em;
        font-family: 'Segoe UI', 'Arial', sans-serif;
    }
    .welcome-title {
        font-size: 2.2rem;
        font-weight: 400;
        color: #fff;
        margin-bottom: 0.5rem;
        text-align: center;
        font-family: 'Segoe UI', 'Arial', sans-serif;
    }
    .subtitle {
        font-size: 1.15rem;
        color: #e0e0e0;
        margin-bottom: 1rem;
        text-align: center;
        font-family: 'Segoe UI', 'Arial', sans-serif;
    }
    .sign-in-btn {
        width: 100%;
        padding: 0.9rem 0;
        font-size: 1.25rem;
        font-weight: 500;
        color: #fff;
        background: linear-gradient(90deg, #4f8cff 0%, #a259ff 100%);
        border: none;
        border-radius: 1rem;
        cursor: pointer;
        transition: filter 0.15s;
        box-shadow: 0 2px 8px 0 rgba(80,80,80,0.10);
    }
    .sign-in-btn:hover {
        filter: brightness(1.08);
    }
</style>

