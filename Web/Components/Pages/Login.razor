@layout LoginLayout
@page "/"
@using System.Security.Cryptography
@inject NavigationManager Navigation

<style>
    .landing-background {
        min-height: 100vh;
        width: 100vw;
        background-size: cover;
        background-position: center;
        position: fixed;
        top: 0; left: 0;
        z-index: -1;
    }

    .fixed-login-column {
        position: fixed;
        top: 0;
        right: 0;
        height: 100vh;
        width: 375px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(20,20,20,0.65);
        z-index: 10;
        box-shadow: -4px 0 32px 0 rgba(0,0,0,0.18);
    }

    .logo-row {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .logo-square img {
        width: 100px;
        height: 100px;
    }

    .app-title {
        font-size: 2.5rem;
        font-weight: 400;
        color: #fff;
        letter-spacing: 0.01em;
        font-family: 'Segoe UI', 'Arial', sans-serif;
    }

    .welcome-title {
        font-size: 2.2rem;
        font-weight: 400;
        color: #fff;
        margin-bottom: 0.5rem;
        text-align: center;
        font-family: 'Segoe UI', 'Arial', sans-serif;
    }

    .subtitle {
        font-size: 1.15rem;
        color: #e0e0e0;
        margin-bottom: 1rem;
        text-align: center;
        font-family: 'Segoe UI', 'Arial', sans-serif;
    }

    .sign-in-btn {
        width: 100%;
        padding: 0.9rem 0;
        font-size: 1.25rem;
        font-weight: 500;
        color: #fff;
        background: linear-gradient(90deg, #4f8cff 0%, #a259ff 100%);
        border: none;
        border-radius: 1rem;
        cursor: pointer;
        transition: filter 0.15s;
        box-shadow: 0 2px 8px 0 rgba(80,80,80,0.10);
    }

    .sign-in-btn:hover {
        filter: brightness(1.08);
    }
</style>

<div class="landing-background" style="background-image: url('/@SelectedImage');" />
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; width: 100vw; position: fixed; top: 0; left: 0;">
    <div class="landing-background" style="background-image: url('/@SelectedImage');"></div>
    <div class="fixed-login-column" >
        <div>
            <div class="logo-row">            
                <div class="logo-row" style="flex-direction: column;">
                    <div class="logo-square" style="margin-bottom: 1rem;">
                        <img src="logo.png" alt="Logo" />
                    </div>
                    <span class="app-title">MyComicsManager</span>
                    <span class="subtitle">Access your digital comic library</span>
                </div>
            </div>
            <MudButton class="sign-in-btn" Href="/Account/Login?redirectUri=/home" EndIcon="@Icons.Material.Filled.Login" Size="Size.Medium" >Login</MudButton>
            <div style="position: absolute; bottom: 24px; left: 0; width: 100%; text-align: center;">
                <span style="color: #bbb; font-size: 1rem;">© ndt.ovh</span>
            </div>
        </div>
    </div>
</div>

@code {
    private string[] ? Images;
    private string ? SelectedImage;

    protected override void OnInitialized()
    {
            
        Images = GetBackgroundImages();
        if (Images == null || Images.Length == 0)
        {
            SelectedImage = string.Empty;
            return;
        }

        SelectedImage = Images[RandomNumberGenerator.GetInt32(Images.Length)];
    }

    private string[] GetBackgroundImages()
    {
        var backgroundDir = Path.Combine(Environment.CurrentDirectory, "wwwroot", "background");
        if (Directory.Exists(backgroundDir))
        {
            return Directory
                .EnumerateFiles(backgroundDir, "*.*", SearchOption.TopDirectoryOnly)
                .Where(f =>
                    f.EndsWith(".png", StringComparison.OrdinalIgnoreCase) ||
                    f.EndsWith(".webp", StringComparison.OrdinalIgnoreCase) ||
                    f.EndsWith(".jpg", StringComparison.OrdinalIgnoreCase))
                .Select(f => $"background/{Path.GetFileName(f)}")
                .ToArray();
        }
        else
        {
            return Array.Empty<string>();
        }
    }
        
}
