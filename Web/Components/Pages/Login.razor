    <div class="landing-background" style="background-image: url('/@SelectedImage');"></div>
    <div class="fixed-login-column" style="width: 375px;">
        <div class="centered-band">
            <div class="logo-row">            
                <div class="logo-row" style="flex-direction: column;">
                    <div class="logo-square" style="margin-bottom: 1rem;">
                        <img src="logo.png" alt="Logo" />
                    </div>
                    <span class="app-title">MyComicsManager</span>
                    <span class="subtitle">Access your digital comic library</span>
                </div>
            </div>
            
            <button class="sign-in-btn" @onclick="Log">Sign In</button>
        </div>
    </div>

    <style>
        .landing-background {
            min-height: 100vh;
            width: 100vw;
            background-size: cover;
            background-position: center;
            position: fixed;
            top: 0; left: 0;
            z-index: -1;
        }
        .fixed-login-column {
            position: fixed;
            top: 0;
