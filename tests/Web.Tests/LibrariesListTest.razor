        comp.FindAll("thead").Should().HaveCount(1);
        comp.FindAll("tbody").Should().HaveCount(1);
        comp.FindAll("thead tr").Should().HaveCount(1);
        comp.FindAll("tbody tr").Should().HaveCount(1);        
    }

