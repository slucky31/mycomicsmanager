@page "/book/create"

@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.ExtraLarge" >

        <EditForm Model="@_book" OnValidSubmit="Create" >
                
            <DataAnnotationsValidator />
            <ValidationSummary />
            
            <MudGrid >
                <MudItem xs="12" >
                    <MudTextField Label="ISBN" Variant="Variant.Text" @bind-Value="_book.Isbn"/>
                </MudItem>
                <MudItem xs="12"  Class="d-flex align-end">
                    <MudRating @bind-SelectedValue="_book.Review"/>
                </MudItem>
                <MudItem xs="12" >
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Ajouter</MudButton>
                </MudItem>
            </MudGrid>
            
        </EditForm>
            
</MudContainer>
